<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <servlet>
        <servlet-name>LoginCtrlServlet</servlet-name>
        <servlet-class>com.zc7h.controller.LoginCtrlServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.zc7h.view.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainFrame</servlet-name>
        <servlet-class>com.zc7h.view.MainFrame</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserManage</servlet-name>
        <servlet-class>com.zc7h.UserManage</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>LoginCtrlServlet</servlet-name>
        <url-pattern>/LoginCtrlServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainFrame</servlet-name>
        <url-pattern>/MainFrame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserManage</servlet-name>
        <url-pattern>/UserManage</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
        <welcome-file>default.htm</welcome-file>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>
</web-app>
